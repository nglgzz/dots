{
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",

  // Title bar
  "workbench.layoutControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "window.commandCenter": false,

  // Color Theme
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Visual Studio Dark",
  "workbench.preferredLightColorTheme": "Quiet Light",

  "workbench.colorCustomizations": {
    "[Visual Studio Dark]": {
      "editorRuler.foreground": "#203134",
      "activityBar.background": "#202124",
      "activityBarBadge.background": "#202124",
      "editor.background": "#202124",
      "editor.selectionForeground": "#202124",
      "editorGroup.border": "#202124",
      "editorGroup.dropBackground": "#202124",
      "editorGroup.emptyBackground": "#202124",
      "editorGroupHeader.noTabsBackground": "#202124",
      "editorGroupHeader.tabsBackground": "#202124",
      "editorGroupHeader.tabsBorder": "#202124",
      "sideBar.background": "#202124",
      "statusBar.background": "#202124",
      "tab.activeBackground": "#202124",
      "tab.activeBorder": "#202124",
      "tab.border": "#202124",
      "tab.inactiveBackground": "#202124",
      "tab.unfocusedActiveBorder": "#202124",
      "titleBar.activeBackground": "#202124",
      "titleBar.border": "#202124",
      "titleBar.inactiveBackground": "#202124",
      "scrollbar.shadow": "#00000000"
    }
  },

  // Zen mode
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,

  // Window
  "window.zoomLevel": 2,
  "window.menuBarVisibility": "toggle",
  "workbench.editor.decorations.colors": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",

  // Editor
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.fontFamily": "'Hack', 'Font Awesome 6 Free Solid'",
  "editor.detectIndentation": true,
  "editor.rulers": [80, 100, 120],
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",

  // Languages
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.autoClosingBrackets": "languageDefined",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.wordWrapColumn": 80
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json5]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Rewrap
  "rewrap.wrappingColumn": 80,

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Files
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/offline/**": true,
    "**/build/**": true,
    "**/.git/**": true,
    "**/static/**": true,
    "**/.svelte-kit/**": true,
    "**/.firebase/**": true,
    "**/out/**": true,
    "**/node_modules/**": true,
    "**/explore/**/*.svg": true,
    "**/coverage/**": true,
    "**/test-results/**": true,
    "**/dist/**": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/.turbo": true,
    "**/.pnpm-debug.log": true,
    "**/tsconfig.tsbuildinfo": true,
    "**/__pycache__": true
  },

  "files.associations": {
    ".env*": "toml"
  },

  // Show number of selected lines
  "selectline.displayFormat": "Selected %d Lines",

  // Other
  "terminal.integrated.enableMultiLinePasteWarning": "never",

  // Zen mode
  "gitlens.mode.active": "zen",
  "githubPullRequests.fileListLayout": "flat"
}
