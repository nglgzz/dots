{
  // Window
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 2,

  // Workbench
  "workbench.colorTheme": "Pitch Black",
  "workbench.editor.decorations.colors": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.colorCustomizations": {
    "activityBar.background": "#0b2027",
    "activityBarBadge.background": "#0b2027",
    "editor.background": "#0b2027",
    "editor.selectionForeground": "#0b2027",
    "editorGroup.border": "#0b2027",
    "editorGroup.dropBackground": "#0b2027",
    "editorGroup.emptyBackground": "#0b2027",
    "editorGroupHeader.noTabsBackground": "#0b2027",
    "editorGroupHeader.tabsBackground": "#0b2027",
    "editorGroupHeader.tabsBorder": "#0b2027",
    "sideBar.background": "#0b2027",
    "statusBar.background": "#0b2027",
    "tab.activeBackground": "#0b2027",
    "tab.activeBorder": "#0b2027",
    "tab.border": "#0b2027",
    "tab.inactiveBackground": "#0b2027",
    "tab.unfocusedActiveBorder": "#0b2027",
    "titleBar.activeBackground": "#0b2027",
    "titleBar.border": "#0b2027",
    "titleBar.inactiveBackground": "#0b2027",
    "scrollbar.shadow": "#00000000"
  },

  // Editor
  "editor.formatOnSave": true,
  "editor.fontFamily": "'Hack', 'Material Icons'",
  "editor.detectIndentation": true,
  "editor.rulers": [80, 100, 120],
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.autoClosingBrackets": "languageDefined"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust"
  },
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80
  },

  // Zen mode
  "zenMode.hideTabs": false,
  "gitlens.mode.active": "zen",

  // Files
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  // Vim
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-d>": false
  },

  // Rewrap
  "rewrap.wrappingColumn": 80,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Sort Imports
  // "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.importStringConfiguration.spacingPerImportExpression.afterStartingBracket": 0,
  "importSorter.importStringConfiguration.spacingPerImportExpression.beforeEndingBracket": 0,
  "importSorter.importStringConfiguration.trailingComma": "multiLine",
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.type": "newLineEachExpressionAfterCountLimit",
  "importSorter.sortConfiguration.removeUnusedImports": true,
  "importSorter.sortConfiguration.removeUnusedDefaultImports": true,
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    // Default orderLevel: 20 (named external imports)
    {
      // Unnamed imports
      "type": "importMember",
      "regex": "^$",
      "orderLevel": 10
    },
    {
      // Relative paths
      "regex": "^[.]",
      "orderLevel": 30
    }
  ],

  // Show number of selected lines
  "selectline.displayFormat": "Selected %d Lines",

  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": false,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  }
}
