{
  "telemetry.telemetryLevel": "off",

  // Window
  "window.menuBarVisibility": "toggle",

  // Workbench
  "workbench.colorTheme": "Pitch Black",
  "workbench.editor.decorations.colors": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.colorCustomizations": {
    "activityBar.background": "#25232b",
    "activityBarBadge.background": "#25232b",
    "editor.background": "#25232b",
    "editor.selectionForeground": "#25232b",
    "editorGroup.border": "#25232b",
    "editorGroup.dropBackground": "#25232b",
    "editorGroup.emptyBackground": "#25232b",
    "editorGroupHeader.noTabsBackground": "#25232b",
    "editorGroupHeader.tabsBackground": "#25232b",
    "editorGroupHeader.tabsBorder": "#25232b",
    "sideBar.background": "#25232b",
    "statusBar.background": "#25232b",
    "tab.activeBackground": "#25232b",
    "tab.activeBorder": "#25232b",
    "tab.border": "#25232b",
    "tab.inactiveBackground": "#25232b",
    "tab.unfocusedActiveBorder": "#25232b",
    "titleBar.activeBackground": "#25232b",
    "titleBar.border": "#25232b",
    "titleBar.inactiveBackground": "#25232b",
    "scrollbar.shadow": "#00000000"
  },

  // Editor
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.fontFamily": "'Hack', 'Font Awesome 6 Free Solid'",
  "editor.detectIndentation": true,
  "editor.rulers": [80, 100, 120],
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "alt",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "diffEditor.ignoreTrimWhitespace": false,

  // Languages
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.autoClosingBrackets": "languageDefined"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.wordWrapColumn": 80
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[markdown]": {
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json5]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnType": true
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Files
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.exclude": {
    "**/.git/**": true,
    "**/out/**": true,
    "**/node_modules/**": true,
    "**/explore/**/*.svg": true,
    "**/coverage/**": true,
    "**/test-results/**": true,
    "**/dist/**": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/.turbo": true,
    "**/.pnpm-debug.log": true,
    "**/tsconfig.tsbuildinfo": true
  },

  // Zen mode
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.fullScreen": false,
  "gitlens.mode.active": "zen",

  // Vim
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-d>": false
  },

  // Rewrap
  "rewrap.wrappingColumn": 80,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Show number of selected lines
  "selectline.displayFormat": "Selected %d Lines",

  "shellcheck.customArgs": ["--external-sources"],
  "window.zoomLevel": 1
}
